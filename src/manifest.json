{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "1.0",
    "author": "Evens Pierre",
    "manifest_version": 2,
    "default_locale": "en",
    "icons": {
        "16": "img/icon_16.png",
        "32": "img/icon_32.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "browser_action": {
        "default_title": "__MSG_tooltip__",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon_16.png",
            "32": "img/icon_32.png",
            "48": "img/icon_48.png",
            "128": "img/icon_128.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false,
        "chrome_style": true
    },
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "exclude_matches": ["https://snippetify.com/*"],
        "css": [
            "css/contentscripts.min.css"
        ],
        "js": [
            "vendor/js/vue.min.js",
            "vendor/js/jquery.min.js",
            "vendor/js/codemirror.js",
            "vendor/js/bootstrap.min.js",
            "vendor/js/simplemde.min.js",
            "js/contentscripts.min.js"
        ],
        "run_at": "document_idle",
        "all_frames": false
    }],
    "commands": {
        "save-snippet": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "MacCtrl+Shift+S"
            },
            "description": "__MSG_commandsSaveSnippet__"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+A",
                "mac": "MacCtrl+Shift+A"
            },
            "description": "__MSG_commandsExecuteBrowserAction__"
        }
    },
    "background": {
        "persistent": false,
        "scripts": ["js/background.min.js"]
    },
    "permissions": [
        "tabs",
        "storage",
        "cookies",
        "activeTab",
        "background",
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "*://*.google.com/",
        "https://snippetify.com/",
        "https://api.snippetify.com/"
    ],
    "web_accessible_resources": [
        "img/*.png",
        "page_modal.html"
    ]
}